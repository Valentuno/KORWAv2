<Page x:Class="pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid Width="1024" Height="768" Margin="0,0,-224,-318" VerticalAlignment="Top" HorizontalAlignment="Left" Background="White">

        <ListView x:Name="Mylist" Margin= "0,0,0,150" Background="White" HorizontalAlignment="Center">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding Title}" Width="200"  />
                        <GridViewColumn Header="Rent" DisplayMemberBinding="{Binding Rent}" Width="200"/>
                        <GridViewColumn Header="Ocena" DisplayMemberBinding="{Binding Ocena}" Width="200"/>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding AlkoholId}" Width="200"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Zdjecie}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>

        </ListView>

        <ListBox x:Name="TEST_LB" HorizontalAlignment="Left" Height="100" Margin="105,658,0,0" VerticalAlignment="Top" Width="696" RenderTransformOrigin="0.355,-0.145"/>
        
    </Grid>
</Page>
